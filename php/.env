# =====================================================
# Laravel Backend 環境変数 (Docker 開発用)
# =====================================================

APP_NAME="LaravelApp"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# =====================================================
# Database
# =====================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=my_db
DB_USERNAME=my_user
DB_PASSWORD=password

# =====================================================
# Mail (Mailhog)
# =====================================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =====================================================
# Logging
# =====================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# =====================================================
# Cache / Queue / Session
# =====================================================
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =====================================================
# Misc
# =====================================================
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback
